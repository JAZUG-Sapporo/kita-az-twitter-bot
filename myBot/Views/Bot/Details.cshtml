@model myBot.Models.Bot

@{
    ViewBag.Title = "Details";
}

<h2>@Model.BotID</h2>

<form id="bot-status-holder" action="@Url.Action("ChangeEnable", new { id = Model.BotID })" class="bot-enabled-@Model.Enabled.ToString().ToLower()">
    <div class="bot-disabled">
        <button id="btn-make-enable" class="btn btn-danger btn-block" data-confirm="@_Localize.AreYouSureToEnablingThisBot">
            @_Localize.Disabled
        </button>
    </div>
    <div class="bot-enabled">
        <button id="btn-make-disable" class="btn btn-primary btn-block" data-confirm="@_Localize.AreYouSureToDisablingThisBot">
            @_Localize.Enabled
        </button>
    </div>
</form>

<hr />

<div>
    <h4>@_Localize.TweetTiming</h4>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.TimeZone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeZone)
        </dd>

        <dt>
            @_Localize.TweetWhile
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BeginTime)
            -
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Duration) @_Localize.Minutes
        </dd>
        <dt></dt>
        <dd>
            @Html.ActionLink(_Localize.ChangeTweetTiming, "Edit", new { id = Model.BotID })
        </dd>
    </dl>
</div>

<hr />

<div>
    <h4>@_Localize.ScheduledMessages</h4>
    <div id="messages-holder" data-confirm-delete="@_Localize.ConfirmDeleteMessage">
        @foreach (var message in Model.Messages.OrderBy(m => m.Order))
        {
            <div class="message">
                <div class="col-md-9">
                    @Html.DisplayFor(modelItem => message.Text)
                </div>
                <div class="col-md-3">
                    @Html.RouteLink(_Localize.Edit, "Message", new { action = "Edit", id = Model.BotID, messageID = message.MessageID }) |
                    @Html.RouteLink(_Localize.Up, "Message", new { action = "Up", id = Model.BotID, messageID = message.MessageID }, new { @class = "up" }) |
                    @Html.RouteLink(_Localize.Down, "Message", new { action = "Down", id = Model.BotID, messageID = message.MessageID }, new { @class = "down" }) |
                    @Html.RouteLink(_Localize.Delete, "Message", new { action = "Delete", id = Model.BotID, messageID = message.MessageID }, new { @class = "delete" })
                </div>
            </div>
        }
    </div>
    <div>
        @Html.RouteLink(_Localize.AddMessage, "Message", new { action = "Create", id = Model.BotID })
    </div>
</div>

<hr />

<h4>Tweet as the Bot</h4>
<form id="tweet-as-the-bot-form" action="@Url.Action("TweetAsTheBot", new { id = Model.BotID })" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="text" class="control-label col-md-2">Text</label>
            <div class="col-md-10">
                <textarea name="text" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="tweet" type="submit" value="Tweet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>

@section scripts{
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Views/Bot/tweet-as-the-bot.js"></script>
    <script src="~/Views/Bot/change-enable.js"></script>
    <script src="~/Views/Bot/messages.js"></script>
}
